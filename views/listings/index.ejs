<% layout("layouts/boilerplate") %>
<body>
    <h2>All Listings</h2>
    <!-- <form action="listings/new" method="GET">
        <button>Create New Listngs</button>
    </form> -->

    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
        <% for(let list of allLists){%>
            <a href="/listings/<%= list._id %>" class="listing-link">
                <div class="card col listing-card" >
                    <img src="<%= list.image.url %>" style="height:20rem" class="card-img-top" alt="listing_image">
                    <div class="card-img-overlay"></div>
                    <div class="card-body">
                      <p class="card-text"><b><%= list.title %></b><br>&#8377;<%=list.price.toLocaleString("en-IN") %>/night</p>
                    </div>
                </div>
            </a>
            <% } %>
    </div>
    
    
    
</body>
