<% layout("layouts/boilerplate") %>

<div class="row mt-3">
    <div class="col-8 offset-2">
        <br>
        <h2>Create a new listings</h2>
        <br>
        <form action="/listings" method="POST" novalidate class="needs-validation">
            <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <input type="text" name="listing[title]" class="form-control" placeholder="Add a catchy title" required>
                <div class="invalid-feedback">Please enter a valid Title</div>
                <div class="valid-feedback">Title looks good</div>
            </div>

            <div class="mb-3">
                <label for="description" class="form-label">Description</label>
                <textarea name="listing[description]" class="form-control" placeholder="Share us what's about it" rows="4" required></textarea>
                <div class="invalid-feedback">Please enter some description</div>
                <div class="valid-feedback">it tells a lot</div>
            </div>

            <div class="mb-3">
                <label for="image" class="form-label">Image Link</label>
                <input type="text" name="listing[image]" class="form-control" placeholder="enter image URL/Link" required>
                <div class="invalid-feedback">Please enter a valid URL</div>
                <div class="valid-feedback">Image seem's awesome</div>

            </div>

            <!-- Price and Country in one row -->
            <div class="row mb-3">
                <div class="col-md-4">
                    <label for="price" class="form-label">Price</label>
                    <input  name="listing[price]" class="form-control" placeholder="1200" required>
                    <div class="invalid-feedback">Please enter a valid Price</div>
                    <div class="valid-feedback">Price look's worthy</div>
                </div>
                <div class="col-md-8">
                    <label for="country" class="form-label">Country</label>
                    <input type="text" name="listing[country]" class="form-control" placeholder="India" required>
                    <div class="invalid-feedback">Please enter a valid County Name</div>
                    <div class="valid-feedback">We love this Country</div>
                </div>
            </div>

            <div class="mb-3">
                <label for="location" class="form-label">Location</label>
                <input type="text" name="listing[location]" class="form-control" placeholder="visakhapatnam, AndhraPradesh" required>
                <div class="invalid-feedback">Please enter a valid Location</div>
                <div class="valid-feedback">Location captured</div>
            </div>
            <br>

            <button class="btn btn-dark add-btn mt-3">Add</button>
            <br><br>
        </form>
    </div>
</div>
